.panel.panel-default
  .panel-heading
    %h4.panel-title
      注册会员
  .panel-body
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), defaults: { hint_html: { class: "meta" } }) do |f|
      = f.error_notification

      = f.input :name, required: true, autofocus: true, label: "用户名", hint: "不区分大小写 (Avatar avatar 同名)"
      = f.input :email, required: true, label: "电子邮件"
      = f.input :password, required: true, hint: ("至少 #{@minimum_password_length} 个字符" if @minimum_password_length), label: "密码"
      = f.input :password_confirmation, required: true, label: "密码确认"

      = f.button :submit, "注  册"
