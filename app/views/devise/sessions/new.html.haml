.panel.panel-default
	.panel-heading
		%h4.panel-title
			登录	
	.panel-body
		= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
			= f.input :email, required: false, autofocus: true, label: "电子邮件"
			= f.input :password, required: false, label: "用户密码"
			= f.input :remember_me, as: :boolean, inline_label: "在这台计算机上记住我" if devise_mapping.rememberable?

			= f.button :submit, "登录"

